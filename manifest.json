{
  "name": "Speedio",
  "version": "1.0",
  "author": "Cosmosis",
  "description": "Speedy-Video Extension: Control video playback speed with keyboard shortcuts",
  "permissions": ["activeTab", "storage"],

  "browser_action": {
    "default_icon": {
      "16": "images/speedio_logo16.png",
      "32": "images/speedio_logo32.png",
      "48": "images/speedio_logo48.png",
      "128": "images/speedio_logo128.png"
    },
    "default_title": "Speedio"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "commands": {
    "speed-up": {
      "suggested_key": {
        "default": "Alt+Period"
      },
      "description": "Speeds up all videos in tab by 0.25"
    },
    "speed-down": {
      "suggested_key": {
        "default": "Alt+Comma"
      },
      "description": "Speeds down all videos in tab by 0.25"
    }
  },

  "icons": {
    "16": "images/speedio_logo16.png",
    "32": "images/speedio_logo32.png",
    "48": "images/speedio_logo48.png",
    "128": "images/speedio_logo128.png"
  },

  "manifest_version": 2
}